{# defined class #}
{% set style = 'alert' %}

{# mutable classe, required #}
{% set classes = classes ~ ' alert-' ~ type|default('info') %}

{# toggle class, optional #}
{% if class.dismissible is same as(true) %}
    {% set classes = classes ~ ' alert-dismissible fade show' %}
{% endif %}

<div class="{{ classes }}" role="alert">
    {% if class.dismissible is same as(true) %}
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    {% endif %}
    {{ content }}
</div>