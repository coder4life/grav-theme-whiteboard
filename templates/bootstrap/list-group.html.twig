<div class="list-group">
    {% for item in collection %}
        {% if item.action %}
            {% include 'bootstrap/buttons.html.twig' with { 'text': item.text } %}
        {% elseif item.url %}
            <a href="{{ item.url }}" class="list-group-item list-group-item-action">
                {{ item.text }}
            </a>
        {% else %}
            {{ item.text }}
        {% endif %}
    {% endfor %}
</div>