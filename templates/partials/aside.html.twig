<aside class="sidebar">
    {% if config.plugins.taxonomylist.enabled %}
        <div class="container">
            <h2 class="title">{{ 'PARTIAL.ASIDE.CATEGORY'|t }}</h2>
            {% include 'partials/taxonomylist.html.twig' with { 'url_relative': url_relative, 'taxonomy': 'category', 'style': 'list' } %}
        </div>
        <div class="container">
            <h2 class="title">{{ 'PARTIAL.ASIDE.TAGS'|t }}</h2>
            {% include 'partials/taxonomylist.html.twig' with { 'url_relative': url_relative, 'taxonomy': 'tag', 'style': 'badge' } %}
        </div>
    {% endif %}
    {% if config.plugins.archives.enabled %}
        <div class="container">
            <h2 class="title">{{ 'PARTIAL.ASIDE.ARCHIVES'|t }}</h2>
            {% include 'partials/archives.html.twig' with { 'base_url': url_relative } %}
        </div>
    {% endif %}
</aside>