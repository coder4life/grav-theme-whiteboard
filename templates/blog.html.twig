{# extends base template partial #}
{% extends 'partials/base.html.twig' %}

{# set collection variable, from page class API #}
{% set collection = page.collection() %}

{% block content %}

	{# include breadcrumbs needed with collection items, not global to site #}
	{% if config.plugins.breadcrumbs.enabled %}
		{% include 'bootstrap' %}
	{% endif %}

	{# define section element type #}
	{% if page.header.collection.type is same as('card') %}
		<section class="blog-cards text-center">
			<div class="container">
				<div class="card-deck">
					{% for item in collection %}
						{% include 'partials/blog_item.html.twig' with { 'blog': page, 'page': item, 'truncate': true } %}
					{% endfor %}

					{% if config.plugins.pagination.enabled and collection.params.pagination %}
						{% include 'partials/pagination.html.twig' with { 'base_url': page.url, 'pagination': collection.params.pagination } %}
					{% endif %}
				</div>
			</div>
		</section>
	{% elseif page.header.collection.type is same as('list') %}

	{% elseif %}
	{% endif %}
{% endblock %}