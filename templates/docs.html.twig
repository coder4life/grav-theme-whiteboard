{% extends 'partials/base.html.twig' %}

{% set items = page.collection() %}

{% block sidebar %}
    {% include 'partials/sidebar_navigation.html.twig' %}
{% endblock %}

{% block content %}
    {% if config.plugins.breadcrumbs.enabled %}
        {% include 'partials/breadcrumbs.html.twig' %}
    {% endif %}

    <div class="content-wrapper blog-content-list grid pure-g">
        <div id="listing" class="block pure-u-2-3 h-feed">
            {% for item in collection %}
                {% include 'partials/blog_item.html.twig' with { 'blog': page, 'page': item, 'truncate': item } %}
            {% endfor %}

            {% if config.plugins.pagination.enabled and items.params.pagination %}
                {% include 'partials/pagination.html.twig' with {'base_url': page.url, 'pagination': items.params.pagination} %}
            {% endif %}
        </div>
        <div id="sidebar" class="block size-1-3 pure-u-1-3">
            {% include 'partials/sidebar.html.twig' with {'blog': page} %}
        </div>
    </div>
{% endblock %}
